<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/call_screen"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:padding="5dip"
android:background="@drawable/background_land"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<!--
 *************************
 * @author Craig Gardner
 * Last Update February 2009
 * 
 * This is the xml associated with our call page. It contains the landscape layout
 * information for the call page, button placement, and text field information.
 *************************
-->
<Button
android:id="@+id/place_call"
android:layout_width="315px"
android:layout_height="wrap_content"
android:text="Place Call"
android:textStyle="bold"
android:layout_alignParentBottom="true"
android:layout_alignParentRight="true"
>
</Button>
<Button
android:id="@+id/help_button"
android:layout_width="155px"
android:layout_height="wrap_content"
android:text="Help"
android:textStyle="bold"
android:textColor="#ffcc0033"
android:layout_alignParentBottom="true"
android:layout_alignParentLeft="true"
>
</Button>
<EditText
android:id="@+id/my_phone_number"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:textSize="18sp"
android:phoneNumber="true"
android:layout_above="@+id/place_call"
android:layout_alignParentLeft="true"
>
</EditText>
<TextView
android:id="@+id/output"
android:layout_width="fill_parent"
android:layout_height="165px"
android:textStyle="bold"
android:textColor="#ffff0000"
android:layout_alignParentTop="true"
android:layout_alignParentLeft="true"
>
</TextView>
<TextView
android:id="@+id/phone_text"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Enter Your Phone Number"
android:textStyle="bold"
android:textColor="#ff000000"
android:layout_above="@+id/my_phone_number"
android:layout_alignParentLeft="true"
>
</TextView>
</RelativeLayout>
