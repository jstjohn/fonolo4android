<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/call_screen"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="#ff3399ff"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<Button
android:id="@+id/place_call"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Place Call"
android:textStyle="bold"
android:layout_alignParentBottom="true"
android:layout_alignParentLeft="true"
>
</Button>
<EditText
android:id="@+id/my_phone_number"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:textSize="18sp"
android:phoneNumber="true"
android:layout_above="@+id/place_call"
android:layout_alignParentLeft="true"
>
</EditText>
<TextView
android:id="@+id/output"
android:layout_width="fill_parent"
android:layout_height="165px"
android:textStyle="bold"
android:textColor="#ffff0000"
android:layout_alignParentTop="true"
android:layout_alignParentLeft="true"
>
</TextView>
<TextView
android:id="@+id/phone_text"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Enter Phone Number"
android:textStyle="bold"
android:textColor="#ff000000"
android:layout_above="@+id/my_phone_number"
android:layout_alignParentLeft="true"
>
</TextView>
</RelativeLayout>
