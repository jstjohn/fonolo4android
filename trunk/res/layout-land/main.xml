<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
android:id="@+id/widget81"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="#ff3399ff"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<TextView
android:id="@+id/user_text"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="User Name:"
android:textStyle="bold"
android:textColor="#ff000033"
android:layout_x="10px"
android:layout_y="2px"
>
</TextView>
<EditText
android:id="@+id/user_field"
android:layout_width="350px"
android:layout_height="wrap_content"
android:textSize="18sp"
android:layout_x="10px"
android:layout_y="22px"
>
</EditText>
<TextView
android:id="@+id/pass_text"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Password:"
android:textStyle="bold"
android:textColor="#ff000033"
android:layout_x="10px"
android:layout_y="72px"
>
</TextView>
<EditText
android:id="@+id/pass_field"
android:layout_width="350px"
android:layout_height="wrap_content"
android:textSize="18sp"
android:layout_x="10px"
android:layout_y="92px"
>
</EditText>
<ScrollView
android:id="@+id/scroll_vw"
android:layout_width="457px"
android:layout_height="107px"
android:layout_x="10px"
android:layout_y="152px"
>
<TextView
android:id="@+id/output"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text=" "
android:textColor="#ff000033"
>
</TextView>
</ScrollView>
<Button
android:id="@+id/go_button"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textColor="#000033"
android:text="Go!"
android:textSize="20px"
android:textStyle="bold"
android:layout_x="400px"
android:layout_y="50px"
>
</Button>
</AbsoluteLayout>
