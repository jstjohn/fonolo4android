<Button
android:id="@+id/new_search_button"
android:layout_width="320px"
android:layout_height="wrap_content"
android:text="New Search"
android:textStyle="bold"
android:layout_alignParentBottom="true"
android:layout_alignParentRight="true"
>
</Button>
<Button
android:id="@+id/help_button"
android:layout_width="160px"
android:layout_height="wrap_content"
android:text="Help"
android:textStyle="bold"
android:textColor="#ffcc0033"
android:layout_alignParentBottom="true"
android:layout_alignParentLeft="true"
>
</Button>
<ScrollView
android:id="@+id/company_scroll"
android:layout_width="fill_parent"
android:layout_height="205px"
android:layout_above="@+id/home_button"
android:layout_alignParentLeft="true"
>
<TableLayout
android:id="@+id/tab_buttons"
android:gravity="left"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
>
</TableLayout>
</ScrollView>
<TextView
android:id="@+id/output"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:textColor="#ffcc0000"
android:layout_alignBottom="@+id/company_scroll"
android:layout_alignParentLeft="true"
>
</TextView>

</RelativeLayout>
