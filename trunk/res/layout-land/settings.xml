<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/widget45"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:padding="5dip"
android:background="@drawable/background"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<!--
 *************************
 * @author Craig Gardner
 * Last Update February 2009
 * 
 * This is the xml associated with our main page. It contains the portrait layout 
 * information for the main page, button placement, and text field information.
 *************************
-->
<TextView
android:id="@+id/TextView_user"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="User Name"
android:textStyle="bold"
android:textColor="#ff000033"
android:layout_alignParentTop="true"
android:layout_alignParentLeft="true"
>
</TextView>
<EditText
android:id="@+id/user_field"
android:layout_width="395px"
android:layout_height="wrap_content"
android:textSize="18sp"
android:layout_below="@+id/TextView_user"
android:layout_alignParentLeft="true"
>
</EditText>
<TextView
android:id="@+id/TextView_password"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Password"
android:textStyle="bold"
android:textColor="#ff000033"
android:layout_below="@+id/user_field"
android:layout_alignParentLeft="true"
>
</TextView>
<EditText
android:id="@+id/pass_field"
android:layout_width="395px"
android:layout_height="wrap_content"
android:textSize="18sp"
android:password="true"
android:layout_below="@+id/TextView_password"
android:layout_alignParentLeft="true"
>
</EditText>
<TextView
android:id="@+id/TextView_number"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Phone Number"
android:textStyle="bold"
android:textColor="#ff000033"
android:layout_below="@+id/pass_field"
android:layout_alignParentLeft="true"
>
</TextView>
<EditText
android:id="@+id/number_field"
android:layout_width="395px"
android:layout_height="wrap_content"
android:textSize="18sp"
android:layout_below="@+id/TextView_number"
android:layout_alignParentLeft="true"
>
</EditText>
<Button
android:id="@+id/go_button"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Save"
android:textSize="20px"
android:textStyle="bold"
android:textColor="#ff000033"
android:layout_below="@+id/TextView_user"
android:layout_alignParentRight="true"
>
</Button>
<Button
android:id="@+id/clear_button"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Clear"
android:textSize="20px"
android:textStyle="bold"
android:textColor="#ff000033"
android:layout_below="@+id/TextView_number"
android:layout_alignParentRight="true"
>
</Button>
<TextView
android:id="@+id/output"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:textColor="#ffcc0000"
android:layout_alignParentBottom="true"
android:layout_alignParentLeft="true"
>
</TextView>
<Button
android:id="@+id/help_button"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Help"
android:textStyle="bold"
android:textColor="#ffcc0033"
android:layout_alignParentBottom="true"
android:layout_alignParentLeft="true"
>
</Button>
</RelativeLayout>
