<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
android:id="@+id/search_screen"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="#ff3399ff"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<Button
android:id="@+id/help_button"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="help"
android:textStyle="bold"
android:layout_x="0px"
android:layout_y="182px"
>
</Button>
<EditText
android:id="@+id/search_box"
android:layout_width="244px"
android:layout_height="wrap_content"
android:textSize="18sp"
android:layout_x="10px"
android:layout_y="32px"
>
</EditText>
<Button
android:id="@+id/search_button"
android:layout_width="50px"
android:layout_height="wrap_content"
android:text="Go!"
android:textStyle="bold"
android:layout_x="260px"
android:layout_y="32px"
>
</Button>
<TextView
android:id="@+id/search_text"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Search for a company:"
android:textStyle="bold"
android:textColor="#ff000000"
android:layout_x="10px"
android:layout_y="12px"
>
</TextView>
<Button
android:id="@+id/favorites_button"
android:layout_width="fill_parent"
android:layout_height="50px"
android:text="favorites"
android:textStyle="bold"
android:layout_x="0px"
android:layout_y="122px"
>
</Button>
<TextView
android:id="@+id/user_field"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:visibility="invisible"
android:layout_x="20px"
android:layout_y="12px"
>
</TextView>
<TextView
android:id="@+id/pass_field"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:visibility="invisible"
android:layout_x="100px"
android:layout_y="12px"
>
</TextView>
<TextView
android:id="@+id/output"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:textColor="#ffcc0000"
android:layout_y="92px"
>
</TextView>
</AbsoluteLayout>
